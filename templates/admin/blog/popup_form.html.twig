<div id="modal_card_post" class="modal modal_cards">
	<!-- Modal card data -->
	<div class="modal-content">
		<span class="close">&times;</span>

		{{ form_start(card_form, {attr: attr|default({})}) }}
			{{ form_row(card_form.cardTitle) }}
			{{ form_row(card_form.post_id,{ 'value': post_id_card }) }}
			{{ form_row(card_form.cardImage) }}
			<!-- {{ form_row(card_form.paragraph,{ 'name': 'paragraph[]' }) }} -->
			<div class="form-group">
				<label class="control-label required" for="post_title">Paragraph 1</label> 
				<input type="text" name="paragraph[]" required="required" autofocus="autofocus" class="form-control card_paragraph" />  
			</div>
			<div class="other_paragraph"></div>
			{{ form_row(card_form.template) }}
			
			<button type="button" class="{{ button_css|default("btn btn-primary add_paragraph") }}">
				<i class="fa fa-save" aria-hidden="true"></i> Add Paragraph 
			</button>

			<button type="submit" class="btn-success {{ button_css|default("btn btn-primary") }}">
				<i class="fa fa-save" aria-hidden="true"></i> {{ button_label|default('label.create_post'|trans) }}
			</button>

			
		{{ form_end(card_form) }}            
	</div>
</div>