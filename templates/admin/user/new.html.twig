{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_post_new' %}

{% block main %}
    <h1>{{ 'title.post_new'|trans }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.summary) }}
		{{ form_row(form.addNewCard) }}
		<div class="form-group"><div class="card_content_add"></div></div>
		<br/><div class="rest_content">
			{{ form_row(form.publishedAt) }}
			{{ form_row(form.tags) }}
		</div>

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.create_post'|trans }}
        </button>
        
        <a href="{{ path('admin_post_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
        </a>
    {{ form_end(form) }}
	
	{{ include('admin/blog/card.html.twig') }}
	
{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}
